<% layout('../layout') -%>

<div class="container">
  <div class="starter-template">
    <form id="filterForm" method="get" class="form-horizontal" action="/listings_filter">
      <div class="form-group">
        <label class="col-xs-3 control-label">Date</label>
        <div class="col-xs-5 date">
          <div class="input-group input-append date" id="datePicker">
            <input type="date" class="form-control" name="filter_date" require/>
            <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
        </div>
      </div>
      <div class="form-group">
          <div class="col-xs-5 col-xs-offset-3">
            <button type="submit" class="btn btn-default">Search availability</button>
          </div>
      </div>
    </form>

    <h1>Listings</h1>
    <% if (listings) { %>
      <% listings.forEach(function(listing, index) { %>
 <!--    <div class="table">
        <div class="column">
            <a href=<%= "/bookings/new?id=" + listing.id %>><img src="<%= listing.image %>" style="width:100%; height:100%; border: 3px solid #cccccc;" ></a>
        </div>
    </div> -->

    <div class="table board">
          <main class="grid">
          
              <a href=<%= "/bookings/new?id=" + listing.id %>><img src="<%= listing.image %>" style="width:100%; height:100%; border: 3px solid #cccccc;" ></a>
            <div class="text">
      <h2><%= listing.name %></h2>
                <h3><%= listing.description %></h3>
              <p><i class="fas fa-map-marker-alt"></i>  <%= listing.location %></p>
              <p>R <%= listing.price %> per night</p>
             <button class="btn btn-primary btn-block"> <a href=<%= "/bookings/new?id=" + listing.id %>>Book a Space</a></button>
            </div>
          </div>
        </main>
        <% });%>
        <% } %>
     
</div>
