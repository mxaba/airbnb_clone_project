<% layout('../layout') -%>
<div class="container">
  <div class="starter-template">
    <h1 class="title">Log In</h1>
    <div class="card">
      <div class="left"></div>
      <div class="right">
    <form class="form-horizontal" action="/users/login" method="post">
      <div class="form-group">
        <div class="col-sm-10">
            <i class="fas fa-user-plus"></i>
          <input required type="email" class="form-control" id="email" name="email" placeholder="Enter email">
        </div>
      </div>
      <div class="form-group">
       
        <div class="col-sm-10">
            <i class="fas fa-lock"></i>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Log in</button>
          <a class="btn btn-danger" href="/auth/google"><b>Log in using <i class="fab fa-google-plus-square"></i></b> </a>
        </div>
      </div>
      <a href="/listings/forgot" class="btn1" ><b>Forgot Password? Click here</b></a>
    </form>
   
  </div>
 
</div>
