<% layout('./layout') -%>
<section class="jumbotron">
  <div class="container">
    <div class="row text-center">
      <h1>Find a place to stay</h1>
        <div class="btn-group">
          <form id="filterForm" method="get" class="form-inline" action="/listings_filter">
            <div class="form-group">
              <div class="col-xs-5 date">
                <div class="input-group input-append date" id="datePicker">
                  <input type="date" class="form-control" name="filter_date" require/>
                </div>
              </div>
            </div>
          <div class="form-group">
            <div class="col-xs-5 col-xs-offset-3">
              <button type="submit" class="btn btn-default">Search availability</button>
            </div>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</section>
<h1>Listings</h1>
<div class="tb">
    
       <thead>
       
      
  
      
      </thead> 
      <% if (listings) { %>
        <tbody>
          <% listings.forEach(function(listing, index) { %>
          
            <th scope="row"><%= index + 1 %>
            <a href=<%= "/bookings/new?id=" + listing.id %>><img src="<%= listing.image %>"></a>
            <p>Name:<%= listing.name %></p></td><br>
                    <h4><i class="fas fa-map-marker-alt"></i> <%= listing.location %></h4>
                    <p>Price:R<%= listing.price %></p></td><br>
           <p>Availability Date :<%= new Date(listing.available).toDateString() %></p><br>
            <p>Description : <%= listing.description %></p>
             
          <% });%>
      
      <% } %>
     
</div>

